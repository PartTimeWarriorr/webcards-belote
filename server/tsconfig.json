{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS", // Node runtime
        "rootDir": "src", // Source files
        "outDir": "dist", // Compiled JS
        "esModuleInterop": true, // Node import compatibility
        "moduleResolution": "Node",
        "types": ["node"],
        "baseUrl": ".", // For path aliases
        "paths": {
            "@shared/*": ["../shared/*"] // Shared types
        }
    },
    "include": ["src"]
}
